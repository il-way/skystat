<configuration>
  <property name="PATTERN"
            value="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread][corr][%X{corrId}][%logger{36}] %msg%n"/>
  <property name="LOG_DIR" value="./logs"/>
  <property name="APP_NAME" value="skystat"/>

  <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <encoder><pattern>${PATTERN}</pattern></encoder>
  </appender>

  <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>${LOG_DIR}/${APP_NAME}.log</file>
    <encoder><pattern>${PATTERN}</pattern></encoder>
    <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
      <fileNamePattern>${LOG_DIR}/${APP_NAME}.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
      <maxFileSize>50MB</maxFileSize>
      <maxHistory>30</maxHistory>
      <totalSizeCap>3GB</totalSizeCap>
    </rollingPolicy>
  </appender>

  <logger name="org.hibernate.SQL" level="WARN"/>
  <logger name="org.springframework" level="INFO"/>
  <springProfile name="staging">
    <logger name="com.ilway.skystat" level="DEBUG"/>
  </springProfile>

  <springProfile name="production">
    <logger name="com.ilway.skystat" level="INFO"/>
  </springProfile>

  <root level="INFO">
    <appender-ref ref="CONSOLE"/>
    <appender-ref ref="FILE"/>
  </root>
</configuration>
